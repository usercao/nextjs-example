{
  "name": "nextjs-example",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "NODE_ENV=production next build",
    "build:dev": "NODE_ENV=development next build",
    "build:pre": "NODE_ENV=test next build",
    "i18n": "yarn i18n:extract && yarn i18n:compile",
    "i18n:extract": "lingui extract --clean",
    "i18n:compile": "lingui compile --strict",
    "lint": "next lint",
    "eslint": "eslint --cache '@(src)/**/*.@(js|jsx|ts|tsx)'",
    "eslint:fix": "yarn eslint -- --fix",
    "prettier": "prettier --write '@(src)/**/*.@(ts|tsx)'",
    "stylelint": "stylelint '@(src)/**/*.@(css|scss|less)'",
    "start": "next start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "@lingui/core": "^4.3.0",
    "@lingui/react": "^4.3.0",
    "dayjs": "^1.11.9",
    "jotai": "^2.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-components": "^6.0.5"
  },
  "devDependencies": {
    "@applint/spec": "^1.2.3",
    "@commitlint/cli": "^17.6.7",
    "@lingui/cli": "^4.3.0",
    "@lingui/loader": "^4.3.0",
    "@lingui/macro": "^4.3.0",
    "@lingui/swc-plugin": "^4.0.3",
    "@types/node": "20.4.4",
    "@types/react": "18.2.16",
    "@types/react-dom": "18.2.7",
    "eslint": "^8.45.0",
    "next": "13.4.12",
    "prettier": "^3.0.0",
    "stylelint": "^15.10.2",
    "typescript": "5.1.6"
  }
}
